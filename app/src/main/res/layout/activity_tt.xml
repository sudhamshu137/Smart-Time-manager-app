<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".tt">

    <soup.neumorphism.NeumorphFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:src="@drawable/done"
        android:id="@+id/done"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:neumorph_shadowColorLight="#ffffff"
        android:onClick="donee"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv"
        android:text="Click on the buttons to select the time\nUpdate your schedule"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@+id/tv"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <soup.neumorphism.NeumorphButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="Waking up in the morning"
                android:gravity="center"
                android:textSize="19sp"
                android:onClick="wake"/>

            <soup.neumorphism.NeumorphButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="exercise time"
                android:gravity="center"
                android:textSize="19sp"
                android:onClick="exer"/>

            <soup.neumorphism.NeumorphButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="breakfast"
                android:gravity="center"
                android:textSize="19sp"
                android:onClick="breakfast"/>

            <soup.neumorphism.NeumorphButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="work starts at"
                android:gravity="center"
                android:textSize="19sp"
                android:onClick="start"/>


            <soup.neumorphism.NeumorphButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:gravity="center"
                android:text="Lunch time"
                android:textSize="19sp"
                android:onClick="lunch"/>

            <soup.neumorphism.NeumorphButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="back to work after lunch"
                android:gravity="center"
                android:textSize="19sp"
                android:onClick="backtowork"/>

            <soup.neumorphism.NeumorphButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="Work ends at in the evening"
                android:gravity="center"
                android:textSize="19sp"
                android:onClick="end"/>

            <soup.neumorphism.NeumorphButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="Dinner at night"
                android:textSize="19sp"
                android:gravity="center"
                android:onClick="dinner"/>

            <soup.neumorphism.NeumorphButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="Sleep time"
                android:gravity="center"
                android:textSize="19sp"
                android:onClick="sleep"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>